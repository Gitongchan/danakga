{{>pages/header1}}
{{>pages/header2}}

    <!-- Start Breadcrumbs -->
    <div class="breadcrumbs">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="breadcrumbs-content">
                        <h1 class="page-title">Login</h1>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <ul class="breadcrumb-nav">
                        <li><a href="index.mustache"><i class="lni lni-home"></i> Home</a></li>
                        <li>Login</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumbs -->

    <!-- Start Account Login Area -->
    <div class="account-login section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                    <form class="card login-form" id="login-form" method="post" action="/login">
                        <div class="card-body">
                            <div class="title">
                                <h3>로그인 하기</h3>
                                <p>로그인 하고 다낚아의 모든 기능을 이용해보세요!</p>
                            </div>
                            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                            <div class="form-group input-group">
                                <label for="reg-fn">아이디</label>
                                <input class="form-control" type="text" name="username" id="reg-id" required>
                            </div>
                            <div class="form-group input-group">
                                <label for="reg-fn">비밀번호</label>
                                <input class="form-control" type="password" name="password" id="reg-pass" required>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                        {{#error}}
                                            <p id="valid" class="alert alert-danger">{{exception}}</p>
                                        {{/error}}
                                </div>
                            </div>
                            <div class="d-flex flex-wrap justify-content-between bottom-content">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input width-auto" id="exampleCheck1">
                                    <label class="form-check-label">기억하기</label>
                                </div>
                                <a class="lost-pass" href="#">비밀번호를 잊으셨나요?</a>
                            </div>
                            <div class="button">
                                <button class="btn" id="login_btn">로그인</button>
                            </div>
                            <p class="outer-link">계정이 없으신가요?<a href="/register">회원가입</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- End Account Login Area -->

    {{>pages/footer1}}
    {{>pages/footer2}}