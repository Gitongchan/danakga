{{>pages/header1}}
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/mypageUser.css">
<link rel="stylesheet" href="/css/mypageManager.css">

<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

{{>pages/header2}}

<div class="container">
    <div class="row">
        <section class="mypage_sidebar">
            <nav class="navbar navbar-expand-lg navbar-light bg-light" id="my-page-nav">
                <button class="navbar-toggler" id="NAVtoggle" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span>목록보기</span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        {{>pages/manager/mypageShopNAV}}
                    </ul>
                </div>
            </nav>
            <article class="product-list">
                <div class="d-flex justify-content-between mb-3">
                    <div class="d-flex align-items-center w-17">
                        <span class="w-50 align-center">상품종류</span>
                        <select class="form-select" id="main-type" aria-label="select order-status" onchange="changeSubType()">
                            <option value="%25">상관없음</option>
                            <option value="바다로드">바다로드</option>
                            <option value="민물로드">민물로드</option>
                            <option value="원투낚시">원투낚시</option>
                            <option value="릴/용품">릴/용품</option>
                            <option value="라인/용품">라인/용품</option>
                            <option value="바늘/훅">바늘/훅</option>
                        </select>
                    </div>
                    <div class="d-flex align-items-center w-17">
                        <span class="w-50 align-center">세부종류</span>
                        <select class="form-select" id="sub-type" aria-label="select order-status">
                            <option value="%25">상관없음</option>
                            <option value="인쇼어">인쇼어</option>
                            <option value="라이트지깅">라이트지깅</option>
                            <option value="볼락/락피쉬">볼락/락피쉬</option>
                            <option value="지깅로드">지깅로드</option>
                            <option value="선상캐스트로드">선상캐스트로드</option>
                            <option value="외수질/침선">외수질/침선</option>
                            <option value="타이라바">타이라바</option>
                            <option value="좌대용">좌대용</option>
                            <option value="두족류">두족류</option>
                        </select>
                    </div>
                    <div class="d-flex align-items-center w-17">
                        <span class="w-50 align-center">브랜드</span>
                        <select class="form-select" id="brand-type" aria-label="select order-status">
                            <option value="%25">상관없음</option>
                            <option value="시마노">시마노</option>
                            <option value="바낙스">바낙스</option>
                            <option value="청룡조구">청룡조구</option>
                            <option value="아부가르시아">아부가르시아</option>
                            <option value="다이와">다이와</option>
                            <option value="해동조구사">해동조구사</option>
                            <option value="키우라">키우라</option>
                            <option value="용성">용성</option>
                            <option value="은성사">은성사</option>
                            <option value="가마가츠">가마가츠</option>
                        </select>
                    </div>
                    <div class="d-flex align-items-center w-17">
                        <span class="w-50 align-center">정렬타입</span>
                        <select class="form-select" id="category-type" aria-label="select order-status">
                            <option value="productName" selected>상품명</option>
                            <option value="productStock">재고수</option>
                            <option value="productType">상품종류</option>
                            <option value="productSubType">세부종류</option>
                            <option value="productBrand">브랜드</option>
                            <option value="productUploadDate">등록일</option>
                        </select>
                    </div>

                    <div class="order_date_wrap d-flex align-items-center">
                        <div class="order_date">
                            <input type="text" name="daterange" value="" />
                            <input type="hidden" value="" id="startDate"/>
                            <input type="hidden" value="" id="endDate"/>
                        </div>
                    </div>
                </div>
                <div class="product-list-header">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex align-items-center">
                            <span class="w-25 align-center">상품명</span>
                            <input class="form-control" type="text" id="productName" placeholder="상품명을 입력하세요" required />
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="w-30 align-center">가격범위</span>
                            <input class="form-control" type="number" min='0' id="startPrice" placeholder="최소가격을 적어주세요" required />
                            ~
                            <input class="form-control" type="number" min='1' id="endPrice" placeholder="최대가격을 적어주세요" required />
                        </div>
                        <div class="d-flex align-items-center w-17">
                            <span class="w-50 align-center">정렬종류</span>
                            <select class="form-select" id="sort-type" aria-label="select order-status">
                                <option value="asc" selected>오름차순</option>
                                <option value="des">내림차순</option>
                            </select>
                        </div>
                        <button class="btn" id="product-listBtn">조회</button>
                    </div>
                </div>
                <div class="product-list-container">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>상품번호</th>
                                <th>상품명</th>
                                <th>메인종류</th>
                                <th>세부종류</th>
                                <th>가격</th>
                                <th>재고</th>
                                <th>이미지여부</th>
                                <th>삭제</th>
                                <th>상세정보</th>
                            </tr>
                        </thead>
                        <tbody id="product-list">

                        </tbody>
                    </table>
                </div>
                <div class="text-center">
                    <ul class="pagination">
                    </ul>
                </div>
            </article>
        </section>


    </div>
</div>
<script>
    $(function() {
        $('input[name="daterange"]').daterangepicker({
            "locale": {
                "format": "YYYY-MM-DD",
                "separator": " ~ ",
                "applyLabel": "확인",
                "cancelLabel": "취소",
                "fromLabel": "From",
                "toLabel": "To",
                "customRangeLabel": "Custom",
                "weekLabel": "W",
                "daysOfWeek": ["일", "월", "화", "수", "목", "금", "토"],
                "monthNames": ["1월", "2월", "3월", "4월", "5월", "6월", "7월", "8월", "9월", "10월", "11월", "12월"],
            },
            opens: 'left'
        }, function(start, end, label) {
            startDate = start.format('YYYY-MM-DD')+'T00:00';
            endDate = end.format('YYYY-MM-DD')+'T00:00';
        });
    });
</script>
