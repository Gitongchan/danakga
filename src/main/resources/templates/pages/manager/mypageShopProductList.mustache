<script>
    $(function() {
        $('input[name="daterange"]').daterangepicker({
            opens: 'left'
        }, function(start, end, label) {
            document.getElementById('startDate').value = start.format('YYYY-MM-DD')+'T00:00';
            document.getElementById('endDate').value = end.format('YYYY-MM-DD')+'T00:00';
        });
    });
</script>
