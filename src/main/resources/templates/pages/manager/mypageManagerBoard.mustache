{{>pages/header1}}

<link rel="stylesheet" href="/css/mypageUser.css">
{{>pages/header2}}

<!-- Cotainer는 그렇게 양쪽 여백을 주게 되어있고  fluid 뭐시기는 여백 없음-->
<div class="container">
    <div class="row">

        <section class="mypage_sidebar">
            <nav class="navbar navbar-expand-lg navbar-light bg-light" id="my-page-nav">
                    <button class="navbar-toggler" id="NAVtoggle" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span>목록보기</span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            {{>pages/mypageManagerNAV}}
                        </ul>
                    </div>
            </nav>

            <article class="mypage_article">
                <div class="text-center">
                <h3>회원정보
                </h3>
                </div>
                <button class="btn align-right" id="changeBtn">수정</button>
                <hr>
                <span class="col-sm-2 control-label">아이디</span>
                <span id="userId"></span> <!-- 아이디 값 불러오기 -->
                <hr>
                <span class="col-sm-2 control-label">이메일</span>
                <span id="userEmail"></span>
                <hr>
                <span class="col-sm-2 control-label">이름</span>
                <span id="userName"></span>
                <hr>
                <span class="col-sm-2 control-label">전화번호</span>
                <span id="userPhone"></span>
                <hr>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="sample4_postcode">우편번호</label>
                        <input type="text" class="form-control col-sm-8 col-8" id="sample4_postcode" placeholder="우편번호"
                               readonly>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="sample4_roadAddress">도로명주소</label>
                        <input type="text" class="form-control" id="sample4_roadAddress" placeholder="도로명주소" readonly
                        ><br>
                    </div>
                    <div class="form-group">
                        <label for="sample4_jibunAddress">지번주소</label>
                        <input type="text" class="form-control" id="sample4_jibunAddress" placeholder="지번주소" readonly>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <span id="guide" style="color:#999;display:none"></span>
                        <label for="sample4_detailAddress">상세주소*</label>
                        <input type="text" class="form-control" id="sample4_detailAddress" placeholder="상세주소" readonly>
                        <!--                                    <input type="text" class="form-control" id="sample4_extraAddress" placeholder="참고항목">-->
                    </div>
                </div>
            </article>
        </section>
    </div>
</div>

