<!-- Start Item Details -->
<section class="item-details section">
    <div class="container">
        <div class="top-area">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-12 col-12">
                    <div class="product-images">
                        <main id="gallery">
                            <div class="main-img">
                            </div>
                            <div class="images">
                            </div>
                        </main>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-12">
                    <div class="product-info">
                        <div class="d-flex justify-content-between">
                            <h2 class="title" id="p-title"></h2>
                            <div>
                                <span class="mx-1"><i class="lni lni-eye mx-1"></i><span id="views-count"></span></span>
                                <span class="mx-1"><i class="lni lni-heart-filled mx-1"></i><span id="heart-count"></span></span>
                            </div>
                        </div>
                        <p class="category"><i class="lni lni-tag"></i> 회사명:
                            <a href="javascript:void(0)">
                                <span id="p-company"></span>
                            </a>
                        </p>
                        <h3 class="price" id="p-price"></h3>
                        <p id="product-main"></p>
                        <p id="product-sub"></p>
                        <p id="product-brand"></p>
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-12">
                                <div class="form-group color-option">
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-12">
                            </div>
                            <div class="col-lg-4 col-md-4 col-12">
                                <div class="form-group quantity">
                                    <label for="quantity">수량</label>
                                    <input type="number" min="1" value='1' class="form-control" id="quantity"/>
                                </div>
                            </div>
                        </div>
                        <div class="bottom-content">
                            <div class="row align-items-end">
                                <div class="col-lg-4 col-md-4 col-12">
<!--                                    <div class="button cart-button">-->
<!--                                        <button class="btn" style="width: 100%;" id="buyBtn"><i class="lni lni-dollar"></i>바로구매</button>-->
<!--                                    </div>-->
                                </div>
                                <div class="col-lg-4 col-md-4 col-12">
                                    <div class="wish-button">
                                        <button class="btn" id="cart_btn"><i class="lni lni-cart"></i> 장바구니</button>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-12">
                                    <div class="wish-button">
                                        <button class="btn" id="wish_btn"><i class="lni lni-heart"></i>찜하기</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="product-details-info">
            <div class="single-block">
                <div class="row">
                    <div class="col-lg-6 col-12">
                        <div class="info-body custom-responsive-margin">
                            <h4>상품설명</h4>
                            <div id="product-info"></div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12">
                        <div class="info-body">
                            <h4>세부사항</h4>
                            <ul class="normal-list">
                                <li id="brand-type-text"></li>
                                <li id="main-type-text"></li>
