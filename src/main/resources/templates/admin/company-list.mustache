{{>admin/header}}
<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">

        {{>admin/admin-menu}}

        <!-- Layout container -->
        <div class="layout-page">
            <!-- Navbar -->

            {{>admin/admin-nav}}

            <!-- / Navbar -->

            <!-- Content wrapper -->
            <div class="content-wrapper">
                <!-- Content -->

                <div class="container-xxl flex-grow-1 container-p-y">
                    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">회원관리 /</span> 사업자 회원</h4>

                    <!-- Basic Bootstrap Table -->
                    <div class="card">
                        <div class="card mb-4">
                            <h5 class="card-header">검색조건</h5>
                            <div class="card-body">
                                <div class="row gx-3 gy-2 align-items-center">
                                    <div class="col-md-3">
                                        <label class="form-label" for="selectSearchRequirements">검색조건</label>
                                        <select id="selectSearchRequirements" class="form-select color-dropdown">
                                            <option value="%25" selected>상관없음</option>
                                            <option value="userId">아이디</option>
                                            <option value="userName">이름</option>
                                            <option value="companyName">회사명</option>
                                            <option value="companyNum">회사전화번호</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label" for="selectEnabled">탈퇴여부</label>
                                        <select class="form-select placement-dropdown" id="selectEnabled">
                                            <option value="true" selected>전체검색</option>
                                            <option value="false">탈퇴</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label" for="selectSortBy">정렬조건</label>
                                        <select class="form-select placement-dropdown" id="selectSortBy">
                                            <option value="userid" selected>아이디</option>
                                            <option value="email">이메일</option>
                                            <option value="name">이름</option>
                                            <option value="phone">전화번호</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label" for="selectSortMethod">정렬</label>
                                        <select class="form-select placement-dropdown" id="selectSortMethod">
                                            <option value="desc" selected>내림차순</option>
                                            <option value="asc">오름차순</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive text-nowrap">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>아이디</th>
                                    <th>이메일</th>
                                    <th>이름</th>
                                    <th>핸드폰번호</th>
                                    <th>상태</th>
                                    <th width="10%"></th>
                                    <th width="10%"></th>
                                    <th width="10%"></th>
                                </tr>
                                </thead>
                                <tbody class="table-border-bottom-0">
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!--/ Basic Bootstrap Table -->

                    <hr class="my-5" />
                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>

        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->
    <script src="/admin/js/company.js"></script>
{{>admin/footer}}