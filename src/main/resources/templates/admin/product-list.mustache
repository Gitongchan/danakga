{{>admin/header}}
<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">

        {{>admin/admin-menu}}

        <!-- Layout container -->
        <div class="layout-page">
            <!-- Navbar -->

            {{>admin/admin-nav}}

            <!-- / Navbar -->

            <!-- Content wrapper -->
            <div class="content-wrapper">
                <!-- Content -->

                <div class="container-xxl flex-grow-1 container-p-y">
                    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">상품관리 /</span> 상품</h4>

                    <!-- Basic Bootstrap Table -->
                    <div class="card">
                        <div class="card mb-4">
                            <h5 class="card-header">검색조건</h5>
                            <div class="card-body">
                                <div class="row gx-3 gy-2 d-flex justify-content-between align-items-center">
                                    <div class="col-md-3">
                                        <label class="form-label" for="searchCategory">검색조건 (검색어 입력시 필요합니다)</label>
                                        <select id="searchCategory" class="form-select color-dropdown">
                                            <option value="가게">가게명</option>
                                            <option value="상품">상품명</option>
                                            <option value="브랜드">브랜드</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3 d-flex justify-content-end">
                                            <button class="btn btn-primary" id="product_list">전체조회</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive text-nowrap">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>회사명</th>
                                    <th>상품브랜드</th>
                                    <th>상품명</th>
                                    <th>상품타입</th>
                                    <th>세부타입</th>
                                    <th width="10%"></th>
                                    <th width="10%"></th>
                                </tr>
                                </thead>
                                <tbody class="table-border-bottom-0">
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!--/ Basic Bootstrap Table -->

                    <hr class="my-5" />
                    <div class="text-center">
                        <ul class="pagination d-flex justify-content-center align-items-center">
                        </ul>
                    </div>
                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>

        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->
    <script src="/admin/js/product.js"></script>
{{>admin/footer}}